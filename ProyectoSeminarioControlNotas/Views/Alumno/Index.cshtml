@model IEnumerable<ProyectoSeminarioControlNotas.Models.Alumno>

@{
    ViewData["Title"] = "Alumnos";
}

<h1>Listado de alumnos</h1>

<p>
    <a asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idCarrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numeroTelefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaNacimiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carrera.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numeroTelefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaNacimiento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idAlumno">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idAlumno">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.idAlumno">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
