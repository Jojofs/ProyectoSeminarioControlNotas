@model IEnumerable<ProyectoSeminarioControlNotas.Models.Calificacion>

@{
    ViewData["Title"] = "Calificaciones";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Listado de calificaciones</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">
            Crear
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor"><path d="M440-280h80v-160h160v-80H520v-160h-80v160H280v80h160v160Zm40 200q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Z" /></svg>
        </a>
    </p>
</div>

<form asp-controller="Calificacion" asp-action="Index" method="get">
    <h2>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <button type="submit" class="btn btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" height="25px" viewBox="0 -960 960 960" width="25px" fill="currentColor"><path d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z" /></svg>
        </button>
    </h2>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Alumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notaParcialUno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notaParcialDos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notaZona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notaExamen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notaFinal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notaParcialUno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notaParcialDos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notaZona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notaExamen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notaFinal)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.idCalificacion" title="Editar" class="mx-1 my-1 btn btn-warning text-white"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor"><path d="M120-120v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm584-528 56-56-56-56-56 56 56 56Z" /></svg></a>
                    <a asp-action="Details" asp-route-id="@item.idCalificacion" title="Detalles" class="mx-1 my-1 btn btn-info text-white"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor"><path d="M320-240h320v-80H320v80Zm0-160h320v-80H320v80ZM240-80q-33 0-56.5-23.5T160-160v-640q0-33 23.5-56.5T240-880h320l240 240v480q0 33-23.5 56.5T720-80H240Zm280-520h200L520-800v200Z" /></svg></a>
                    <a asp-action="Delete" asp-route-id="@item.idCalificacion" title="Eliminar" class="mx-1 my-1 btn btn-danger text-white"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor"><path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm80-160h80v-360h-80v360Zm160 0h80v-360h-80v360Z" /></svg></a>
            </td>
        </tr>
}
    </tbody>
</table>
