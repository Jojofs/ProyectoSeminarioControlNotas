@model ProyectoSeminarioControlNotas.Models.Calificacion

@{
    ViewData["Title"] = "Eliminar calificación";
}

<h1>Eliminar calificación</h1>

<h3>¿Estás seguro que deseas eliminar esta calificación?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alumno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alumno.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Curso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Curso.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.notaParcialUno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.notaParcialUno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.notaParcialDos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.notaParcialDos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.notaZona)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.notaZona)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.notaExamen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.notaExamen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.notaFinal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.notaFinal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idCalificacion" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
