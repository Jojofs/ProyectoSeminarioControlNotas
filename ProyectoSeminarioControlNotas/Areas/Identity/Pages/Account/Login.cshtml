@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio de sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es-gt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FIUMG Cuilapa</title>
    <link rel="icon" href="~/favicon.svg" type="image/svg+xml" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoSeminarioControlNotas.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="col">
            <h1 class="text-center">@ViewData["Title"]</h1>

            <div class="row align-items-center justify-content-center">

                <div class="col-md-4">
                    <section>
                        <form id="account" method="post">
                            <h4 class="text-center">Accede al sistema con tus credenciales</h4>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="correo@ejemplo.com" />
                                <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Ingresar</button>
                            </div>
                            <div>
                                <!--
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                -->
                                <p class="text-center">
                                    ¿No tienes cuenta? Puedes <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">registrarte</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
                <!-- Cuadro lateral que podría usarse más adelante
                <div class="col-md-6 col-md-offset-2">
                    <section>
                        <h3>Use another service to log in.</h3>
                        <hr />
